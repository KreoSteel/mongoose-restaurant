{
  "name": "mongoose-restaurant",
  "version": "1.0.0",
  "description": "MongoDB restaurant server with TypeScript",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon app.ts",
    "start": "node dist/app.js",
    "watch": "tsc -w",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t backend .",
    "docker:rebuild": "docker stop backend 2>nul || echo Container not running && docker rm backend 2>nul || echo Container not found && docker build -t backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env --name backend backend ",
    "docker:stop": "docker stop backend",
    "docker:remove": "docker rm backend"

  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "mongoose": "^8.17.0",
    "nodemon": "^3.1.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.38.0"
  }
}
